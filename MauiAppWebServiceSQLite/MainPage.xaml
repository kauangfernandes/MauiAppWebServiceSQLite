<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppWebServiceSQLite.MainPage">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="VerticalOptions" Value="FillAndExpand" />
        </Style>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ir para lista de previsões salvas" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>


    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label Text="Cidade: " />
            <Entry x:Name="inputCidade" Text="jau" />

            <Label x:Name="lbl_previsao" />

            <Button Text="Obter previção do tempo." Clicked="Button_Clicked" />

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
